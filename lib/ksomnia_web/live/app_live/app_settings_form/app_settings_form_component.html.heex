<div class="px-8">
  <.form
    let={f}
    for={@changeset}
    id="app-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save">
    <div class="">
      <div class="mt-5 text-left">
        <%= label f, :name, class: "block text-slate-700 text-sm font-medium" %>
        <%= text_input f, :name, class: "mt-1 border border-slate-300 rounded-md shadow-sm px-2 py-2 placeholder-slate-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
        <%= error_tag f, :name %>
      </div>
      <div class="mt-5">
        <%= submit "Save",
          phx_disable_with: "Saving...",
          class: "btn-primary"
        %>
      </div>
    </div>
  </.form>
</div>
